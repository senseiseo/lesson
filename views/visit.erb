<h2>Дни посечения</h2>


<form action="visit" method="POST" role="form">
  <div class="form-group">
    <label> Ваше имя</label>
    <input name="username"type="text" class="form-control"  placeholder="ваше имя">
  </div>

  <div class="form-group">
    <label> Ваш телефон</label>
    <input name="phone"type="text" class="form-control"  placeholder="Телефон">
  </div>

  <div class="form-group">
    <label>Когда вас ждать</label>
    <input name="datetime"type="text" class="form-control"  placeholder="укажите удобное для вас время">
  </div>

 <div class="form-group">
    <label for="exampleFormControlSelect1">Выбор парихмахера</label>
    <select name="barber" class="form-control" id="exampleFormControlSelect1">
      <option>Джон смит</option>
      <option>Смит джон</option>
      <option>Саманта клара</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
